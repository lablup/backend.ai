root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{py,md}]
max_line_length = 105
indent_style = space
indent_size = 4

[*.rst]
max_line_length = 0
indent_style = space
indent_size = 3

[.travis.yml]
indent_style = space
indent_size = 2

[BUILD]
indent_style = space
indent_size = 4

[VERSION]
insert_final_newline = false
